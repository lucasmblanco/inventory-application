<%- include('../index.ejs')%>

<form action="" method="POST">
    <div class="field-container">
        <label for="name">Name: </label>
        <input type="text" required="true" id="name" name="name" value="<%= genre ? genre.name : '' %>">
    </div>
    <button type="submit">Submit</button>
</form>
<div>
    <% if(errors.length > 0) { %>
        <ul>
            <% errors.forEach(error => { %> 
                <li><%= error.msg%></li>
            <% }) %>
        </ul>
    <% } %>
</div>
